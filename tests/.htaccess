# Restrict access to tests directory
# Only allow access from localhost in development

<IfModule mod_authz_core.c>
    # Apache 2.4+
    Require local
</IfModule>

<IfModule !mod_authz_core.c>
    # Apache 2.2
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Allow from ::1
</IfModule>

# Prevent directory listing
Options -Indexes

# Prevent access to sensitive files
<FilesMatch "\.(md|js)$">
    <IfModule mod_authz_core.c>
        Require local
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Deny,Allow
        Deny from all
        Allow from 127.0.0.1
    </IfModule>
</FilesMatch>
