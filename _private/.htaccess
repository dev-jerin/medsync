# Deny all access to this directory (Apache 2.4+)
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Fallback for older Apache versions (2.2)
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Prevent directory listing
Options -Indexes

